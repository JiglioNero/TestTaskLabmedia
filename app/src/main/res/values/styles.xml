<resources>

    <!-- Base application theme. -->
    <style name="FullScreenAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/primaryYellow</item>
        <item name="colorPrimaryDark">@color/primaryDarkYellow</item>
        <item name="colorAccent">@color/accentWhite</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
